{
  "name": "Review",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "rating": {
      "type": "number",
      "required": true
    },
    "comment": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "person": {
      "type": "belongsTo",
      "model": "Person",
      "foreignKey": ""
    },
    "device": {
      "type": "belongsTo",
      "model": "Device",
      "foreignKey": ""
    }
  },
  "acls": [  {
    "property": "*",
    "accessType": "*",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
  },
    {
      "property": "*",
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }],
  "methods": {}
}
